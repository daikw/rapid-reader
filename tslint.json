{
  "extends": "tslint:recommended",
  "rules": {
    "align": {
      "options": [
        "arguments",
        "elements",
        "members",
        "parameters",
        "statements"
      ]
    },
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "semicolon": [true, "never"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ]
  },
  "whitespace": true,
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
